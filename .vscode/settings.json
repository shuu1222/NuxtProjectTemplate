{
  "editor.formatOnSave": true,
  "css.validate": false,
  "scss.validate": true,
  // ESLint のディレクトリ指定
  "eslint.workingDirectories": ["./"],
  // ファイル保存時に自動修正
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  // ESLint のディレクトリ指定する　（現在仮で指定してあるので、修正してこの文を削除する）
  "eslint.workingDirectories": ["user-front"],
  // 関連付け
  "files.associations": {
    "Dockerfile*": "dockerfile"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"
  
  "highlight.regexes": {
    "(TODO:?)": [
      {
        "overviewRulerColor": "#ffcc00",
        "backgroundColor": "#cc9900",
        "color": "#ffffff",
        "fontWeight": "bold"
      }
    ],
    "(FIXME:?)": [
      {
        "overviewRulerColor": "#ff0000",
        "backgroundColor": "#ff0000",
        "color": "#ffffff",
        "fontWeight": "bold"
      }
    ],
    "(@param)": [
      {
        "overviewRulerColor": "#ff0000",
        "backgroundColor": "",
        "color": "#32cd32",
        "fontWeight": "bold"
      }
    ],
    "(methods:)": [
      {
        "overviewRulerColor": "#ff0000",
        "backgroundColor": "",
        "color": "#ff0000",
        "fontWeight": "middle",
        "fontStyle": "italic"
      }
    ],
    "(computed:)": [
      {
        "overviewRulerColor": "#ff0000",
        "backgroundColor": "",
        "color": "#ff0000",
        "fontWeight": "middle",
        "fontStyle": "italic"
      }
    ],
    "(watch:)": [
      {
        "overviewRulerColor": "#ff0000",
        "backgroundColor": "",
        "color": "#ff0000",
        "fontWeight": "middle",
        "fontStyle": "italic"
      }
    ],
    "(components:)": [
      {
        "overviewRulerColor": "#ff0000",
        "backgroundColor": "",
        "color": "#ff0000",
        "fontWeight": "middle",
        "fontStyle": "italic"
      }
    ],
    "(@click)": [
      {
        "overviewRulerColor": "#0000FF",
        "backgroundColor": "",
        "color": "#ff4500",
        "fontWeight": "middle",
        "fontStyle": "italic"
      }
    ],
    "(getters:)": [
      {
        "overviewRulerColor": "#0000FF",
        "backgroundColor": "",
        "color": "#ff4500",
        "fontWeight": "bold",
        "fontStyle": "italic"
      }
    ],
    "(actions:)": [
      {
        "overviewRulerColor": "#0000FF",
        "backgroundColor": "",
        "color": "#ff4500",
        "fontWeight": "bold",
        "fontStyle": "italic"
      }
    ],
    "(mutations:)": [
      {
        "overviewRulerColor": "#0000FF",
        "backgroundColor": "",
        "color": "#ff4500",
        "fontWeight": "bold",
        "fontStyle": "italic"
      }
    ],
    "(// )(@\\w+)": [
      {},
      {
        "color": "#3399cc"
      }
    ]
  },
}
